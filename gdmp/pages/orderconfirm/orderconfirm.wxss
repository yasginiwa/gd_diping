/* pages/orderconfirm/orderconfirm.wxss */
page {
  background-color: var(--bgColor);
}

.navbar {
  background-image: linear-gradient(45deg, #ee0a24, #fccd1f);
  width: 100%;
  height: 135rpx;
  text-align: center;
  line-height: 155rpx;
  color: white;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.navbar .van-icon {
  transform: translate(10rpx, 10rpx);
}

.navbar text {
  transform: translate(-20rpx, 10rpx);
}


.address {
  background-color: #fff;
  display: flex;
  border-radius: 20rpx;
  margin: 20rpx;
  padding: 20rpx;
  color: #282828;
  align-items: center;
}

.address i {
  color: #ee0a24;
  font-size: 36rpx;
}

.address .contact {
  display: flex;
  flex-direction: column;
  padding: 0 20rpx;
  justify-content: space-between;
}

.contact>view text:nth-child(2) {
  color: #8a8a8a;
  font-size: 26rpx;
  display: inline-block;
  padding: 10rpx;
}

.contact .detail {
  font-size: 26rpx;
}

.goods {
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  padding: 20rpx;
  margin: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
}

.goods .sec-1 {
  display: flex;
}

.sec-1 .icon {
  width: 160rpx;
  height: 160rpx;
  flex: 1;
}

.sec-1 .title {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  justify-content: space-around;
  flex: 4;
}

.title .name {
  color: #282828;
  font-size: 32rpx;
}

.title .type-name {
  color: #8a8a8a;
  font-size: 24rpx;
  transform: translateY(-10rpx);
}

.title > view {
  display: flex;
  justify-content: space-between;
}

.title .price {
  color: #ee0a24;
}

.title .buycount {
  color: #8a8a8a;
}

.sec-2 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #646566;
  padding: 40rpx 0;
  font-size: 28rpx;
}

.sec-2 > view {
  display: flex;
  align-items: center;
}