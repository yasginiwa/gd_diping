/* pages/cart/cart.wxss */
page {
  background-color: #eee;
}

.cart-wrapper {
  padding: 20rpx;
  overflow: hidden;
  box-sizing: border-box;
}

.cart-wrapper .cart-product:nth-child(1) {
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
}

.cart-wrapper .cart-product:nth-last-child(1) {
  border-bottom-left-radius: 16rpx;
  border-bottom-right-radius: 16rpx;
}

.cart-product {
  display: flex;
  justify-content: space-evenly;
  background-color: #fff;
  align-items: center;
  border-bottom: #eee solid 1rpx;
  padding: 20rpx 10rpx;
}

.cart-product image {
  width: 160rpx;
  height: 160rpx;
  margin-left: 20rpx;
}

.cart-product .detail {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 160rpx;
  margin-left: 20rpx;
}

.cart-product .detail .name {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.name text {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: 400rpx;
  color: #444;
  font-size: 26rpx;
  line-height: 26rpx;
  height: 2;
}

.cart-product .type {
  font-size: 24rpx;
  color: #aaa;
  transform: translateY(-10rpx);
}

.cart-product .price {
  display: flex;
  align-items: center;
  color: #e7001c;
  justify-content: space-between;
}


.unlogin {
  width: 100%;
  height: 60vh;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
}

.unlogin i {
  font-size: 200rpx;
  color: #ddd;
}

.unlogin text {
  color: #8a8a8a;
  font-size: 30rpx;
}

.unlogin view {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.unlogin .van-button {
  border-radius: 10rpx;
  font-size: 32rpx;
  letter-spacing: 4rpx;
  margin-top: 40rpx;
}

.total {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  background-color: #fff;
  height: 100rpx;
  line-height: 100rpx;
  align-items: center;
  justify-content: space-between;
  color: #aaa;
  font: 30rpx;
}

.total .van-checkbox {
  transform: translateX(20rpx);
}

.van-checkbox .van-checkbox__label {
  color: #aaa;
  font: 30rpx;
}

.total .account {
  transform: translateX(40rpx);
}

.total .buy {
  width: 200rpx;
  background-color: #e7001c;
  color: #fff;
  display: flex;
  justify-content: center;
  font-weight: bold;
}