/* pages/cart/cart.wxss */
page {
  background-color: #eee;
}

.cart-wrapper {
  margin: 20rpx;
  box-sizing: border-box;
}

.van-swipe-cell {
  border-radius: 20rpx;
  overflow: hidden;
  -webkit-transform:rotate(0deg);
  margin-bottom: 20rpx;
}


.van-cell .icon {
  display: flex;
  align-items: center;
  justify-content: space-evenly;
}

.icon image {
  width: 160rpx;
  height: 160rpx;
  margin-left: 20rpx;
}

.title {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 20rpx;
}

.title text:nth-child(1) {
  font-size: 32rpx;
  font-size: bolder;
}

.title text:nth-child(2) {
  color: #aaa;
  font-size: 24rpx;
}

.label {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-left: 20rpx;
  transform: translateY(18rpx);
}

.label text {
  color: #ee0a24;
  font-size: 32rpx;
}

.van-swipe-cell__right {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60px;
  font-size: 15px;
  color: #fff;
  background-color: #ee0a24;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
}

.unlogin {
  width: 100%;
  height: 60vh;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
}

.unlogin i {
  font-size: 200rpx;
  color: #ddd;
}

.unlogin text {
  color: #8a8a8a;
  font-size: 30rpx;
}

.unlogin view {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.unlogin .van-button {
  border-radius: 10rpx;
  font-size: 32rpx;
  letter-spacing: 4rpx;
  margin-top: 40rpx;
}

.total {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  background-color: #fff;
  height: 100rpx;
  line-height: 100rpx;
  align-items: center;
  justify-content: space-between;
  color: #aaa;
  font: 30rpx;
}

.total .van-checkbox {
  transform: translateX(20rpx);
}

.van-checkbox .van-checkbox__label {
  color: #aaa;
  font: 30rpx;
}

.total .account {
  transform: translateX(40rpx);
}

.total .buy {
  width: 200rpx;
  background-color: #e7001c;
  color: #fff;
  display: flex;
  justify-content: center;
  font-weight: bold;
}