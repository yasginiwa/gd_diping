/* pages/profile/profile.wxss */
.header {
  width: 100%;
  height: 300rpx;
  background-image: linear-gradient(-60deg, #ff5858 0%, #f09819 100%);
  display: flex;
  align-items: center;
  position: relative;
}

.header .avatar {
  transform: translateX(40rpx);
}

.avatar view {
  display: flex;
  align-items: center;
}

.avatar view > image {
  width: 130rpx;
  height: 130rpx;
  border: 8rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 50%;
}

.avatar view > text {
  transform: translateX(40rpx);
  color: #fff;
}

.header > image {
  width: 350rpx;
  height: 350rpx;
  position: absolute;
  left: 40rpx;
  bottom: -30rpx;
}

.header .shining {
  height: 100%;
  width: 30rpx;
  transform: rotateZ(-20deg);
  background-color: rgba(255, 255, 255, 0.5);
}